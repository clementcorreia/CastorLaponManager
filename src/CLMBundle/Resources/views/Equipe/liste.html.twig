{% extends "::base.html.twig" %}

{% block content %}
    <h3>Liste des équipes</h3>
    <div class="row">
        {% for equipe in equipes %} <!-- récuperer les projets de l'équipe de l'étudiant -->
            <div class="col s12 m4">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{ equipe.nom }}</span>
                        <p>Projet : {% if equipe.projet is not null %}{{ equipe.projet }}{% else %}<i>Aucun</i>{% endif %}</p>
                        <p>Nombre d'élèves : {{ equipe.apprenants|length }}</p>
                    </div>
                    <div class="card-action">
                        <a href="{{ path('clm_equipe_edit', {'idEquipe' : equipe.id}) }}">Modifier</a>
                        <a href="{{ path('clm_equipe_details', {'idEquipe' : equipe.id}) }}">Détails</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}