{% extends "::base.html.twig" %}

{% block content %}
    <h3>Liste des classes</h3>
    <div class="row">
        {% for classe in classes %} <!-- récuperer les classes de l'équipe de l'étudiant -->
            <div class="col s12 m4">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{ classe.nom }}</span>
                        <p>Campus : {% if classe.campus is not null %}{{ classe.campus }}{% else %}<i>Aucun</i>{% endif %}</p>
                        <p>Nombre d'élèves : {{ classe.apprenants|length }}</p>
                    </div>
                    <div class="card-action">
                        <a href="{{ path('clm_classe_edit', {'idClasse' : classe.id}) }}">Modifier</a>
                        <a href="{{ path('clm_classe_details', {'idClasse' : classe.id}) }}">Détails</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}