{% extends "::base.html.twig" %}

{% block content %}
    <h3>Liste des campus</h3>
    <div class="row">
        {% if campusListe|length <= 0 %}
            <p>Aucun campus</p>
        {% endif %}
        <table>
            <thead>
            <tr>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
        {% for campus in campusListe %} <!-- récuperer les campuss de l'équipe de l'étudiant -->
                <tr>
                    <td>{{ campus.ville }}</td>
                    <td><a href="{{ path('clm_campus_edit', {'idCampus': campus.id}) }}"><i class="material-icons">edit</i></a></td>
                </tr>
        {% endfor %}
            </tbody>
        </table>
{% endblock %}